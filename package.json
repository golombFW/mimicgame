  "repository": {
    "type": "git",
    "url": "https://github.com/golombFW/mimicgame.git"
  },
  "bugs": {
    "url": "https://github.com/golombFW/mimicgame/issues"
  },
  "dependencies": {
    "react": "0.14.3",
    "react-dom": "0.14.3",
    "react-addons-linked-state-mixin": "0.14.3",
    "parse": "1.6.9",
    "parse-react": "0.5.0",
    "react-bootstrap": "0.28.1",
    "reflux": "0.3.0",
    "webcamjs": "^1.0.4",
    "body-parser": "^1.14.1",
    "express": "^4.4.5",
    "nodemon": "^1.8.1"
  },
  "devDependencies": {
    "browserify": "^12.0.1",
    "reactify": "^1.1.1",
    "watchify": "^3.6.0",
    "stripify": "^3.0.0",
    "less": "^2.5.3",
    "catw": "^1.0.1"
  },
  "scripts": {
    "watch-css": "catw -c 'lessc --include-path=./css:./css/libs -' 'css/**/**.less' -o target/public/css/style.css -v",
    "watch-js": "watchify -o target/public/js/bundle.js -v -d js/app.js",
    "build-js": "browserify js/app.js -o target/public/js/bundle.js",
    "build-css": "catw -c 'lessc --include-path=./css:./css/libs -' 'css/**/**.less' > target/public/css/style.css",
    "watch": "npm run watch-css & npm run watch-js",
    "build": "npm run build-css && npm run build-js",
    "start": "npm run watch & nodemon devserver.js"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  }
}
