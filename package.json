{
  "name": "mimicgame",
  "version": "0.0.3",
  "author": "Filip Gołębiewski",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/golombFW/mimicgame.git"
  },
  "bugs": {
    "url": "https://github.com/golombFW/mimicgame/issues"
  },
  "dependencies": {
    "jquery": "^2.1.4",
    "react": "^0.13.3",
    "parse": "^1.5.0",
    "parse-react": "^0.4.2",
    "react-bootstrap-modal": "^1.2.1",
    "reflux": "^0.2.12",
    "body-parser": "^1.4.3",
    "express": "^4.4.5",
    "nodemon": "^1.4.1"
  },
  "devDependencies": {
    "browserify": "^11.0.1",
    "reactify": "^1.1.1",
    "watchify": "^3.4.0",
    "stripify": "^3.0.0",
    "less": "^2.5.1",
    "catw": "^1.0.1"
  },
  "scripts": {
    "watch-css": "catw -c 'lessc --include-path=./css:./css/libs -' 'css/style.less' -o target/public/css/style.css -v",
    "watch-js": "watchify -o target/public/js/bundle.js -v -d js/app.js",
    "build-js": "browserify js/app.js -o target/public/js/bundle.js",
    "build-css": "catw -c 'lessc --include-path=./css:./css/libs -' 'css/style.less' > target/public/css/style.css",
    "watch": "npm run watch-css & npm run watch-js",
    "build": "npm run build-css && npm run build-js",
    "start": "npm run watch & nodemon devserver.js"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  }
}
